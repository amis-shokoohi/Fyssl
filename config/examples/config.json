{
  "log-path": "/tmp",
  "connections":
  [
    {
      "type": "tcp",
      "params": {},
      "process": ".",
      "ports": "1234",
      "actions":
      [
        {
          "trigger": ".+asdf.+",
          "target": "remote",
          "target-params": {
            "address": "0.0.0.0:1234"
          }
        },
        {
          "trigger": ".+abc.+",
          "target": "reply",
          "target-params": {
            "message": "{0-10}asdf"
          }
        }
      ]
    },
    {
      "type":"ssl",
      "params": {
        "key-path": "/tmp/key",
        "cert-path": "/tmp/cert"
      },
      "process": ".",
      "ports": "100-200",
      "actions": [
        {
          "trigger": ".",
          "target": "remote",
          "target-params": {
            "address": "127.0.0.1:1758"
          }
        }
      ]
    }
  ]
}